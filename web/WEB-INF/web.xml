<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>easy</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbNewsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>easy</servlet-name>
        <url-pattern>/action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>easy1</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbDirectoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>easy1</servlet-name>
        <url-pattern>/action1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>easy2</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbBargainTodayController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>easy2</servlet-name>
        <url-pattern>/action2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>easy3</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbHotSaleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>easy3</servlet-name>
        <url-pattern>/action3</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>action</welcome-file>
    </welcome-file-list>

</web-app>